<Window x:Class="PCMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCMover"
        mc:Ignorable="d"
        Title="PCMover" Height="1000" Width="1500" Background="#FF121212" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="0.1"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,3,5,0" Source="/Resources/logo.png" Width="45" Height="45"/>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="74,0,0,0" Content="PCMover" Foreground="White" FontSize="24"></Label>
            </Grid>
            <Grid Grid.Row="1">
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" Content="Transfer your Windows settings to a clean installation" Foreground="#FF527589"></Label>
            </Grid>
            <Grid Grid.Row="2" Background="#FF6B6B6B"></Grid>
        </Grid>
        
        
        
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid x:Name="GExportTab" Grid.Column="0">
                <Label Content="Export Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="16"></Label>
                <Line Fill="White" VerticalAlignment="Bottom" Margin="15,0,15,5" StrokeThickness="2" Height="10" X2="{Binding ActualWidth, ElementName=GExportTab, Mode=OneWay}" Y1="9" Stroke="White" Y2="9"/>
            </Grid>
            <Grid x:Name="GImportTab" Grid.Column="1">
                <Label Content="Import Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF909090" FontSize="16"></Label>
            </Grid>
        </Grid>
        
        
        
        
        
        <Grid Grid.Row="2">
            <Grid Margin="300,30,300,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"></RowDefinition>
                    <RowDefinition Height="0.4*"></RowDefinition>
                    <RowDefinition Height="5*"></RowDefinition>
                    <RowDefinition Height="0.7*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="Select Settings to Export" FontSize="24" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Content="Choose which settings you want to transfer to your new Windows installation" Foreground="#FFA4A4A4" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"></Label>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    
                    <Grid Grid.Row="0">
                        <Border Background="#FF17212B" Margin="10,10,10,10">
                            <Border.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Border.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Desktop Settings" Background="{x:Null}" Foreground="White" FontSize="22"/>
                                    <Label Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Wallpaper, icons, theme preferences" Background="{x:Null}" Foreground="#FFA4A39E" FontSize="14"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>


                    <Grid Grid.Row="1">
                        <Border Background="#FF17212B" Margin="10,10,10,10">
                            <Border.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Border.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Browser Data" Background="{x:Null}" Foreground="White" FontSize="22"/>
                                    <Label Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Bookmarks, saved passwords" Background="{x:Null}" Foreground="#FFA4A39E" FontSize="14"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>


                    <Grid Grid.Row="2">
                        <Border Background="#FF17212B" Margin="10,10,10,10">
                            <Border.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Border.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Network Settings" Background="{x:Null}" Foreground="White" FontSize="22"/>
                                    <Label Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Content="WiFi networks, VPN configurations" Background="{x:Null}" Foreground="#FFA4A39E" FontSize="14"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>


                    <Grid Grid.Row="3">
                        <Border Background="#FF17212B" Margin="10,10,10,10">
                            <Border.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Border.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="System Preferences" Background="{x:Null}" Foreground="White" FontSize="22"/>
                                    <Label Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Display settings, power options, regional settings" Background="{x:Null}" Foreground="#FFA4A39E" FontSize="14"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Border Background="#FF17212B" Margin="10,10,10,10">
                            <Border.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Border.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="File Associations" Background="{x:Null}" Foreground="White" FontSize="22"/>
                                    <Label Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Default programs for file types" Background="{x:Null}" Foreground="#FFA4A39E" FontSize="14"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>


                </Grid>
                <Grid Grid.Row="3">
                    <Border x:Name="BExportFile" Background="White" Margin="10,10,10,10" MouseDown="BExportFile_MouseDown">
                        <Border.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Border.Resources>
                        <Grid>
                            <Label Content="Export Settings File" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
        
        
        
        
    </Grid>
</Window>
