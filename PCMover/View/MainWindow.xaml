<Window x:Class="PCMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCMover"
        mc:Ignorable="d"
        Title="PCMover" Height="800" Width="1500" Background="#FF121212">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="0.1"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,3,5,0" Source="/Resources/logo.png" Width="45" Height="45"/>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="74,0,0,0" Content="PCMover" Foreground="White" FontSize="24"></Label>
            </Grid>
            <Grid Grid.Row="1">
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" Content="Transfer your Windows settings to a clean installation" Foreground="#FF527589"></Label>
            </Grid>
            <Grid Grid.Row="2" Background="#FF6B6B6B"></Grid>
        </Grid>
        
        
        
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid x:Name="GExportTab" Grid.Column="0">
                <Label Content="Export Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="16"></Label>
                <Line Fill="White" VerticalAlignment="Bottom" Margin="15,0,15,5" StrokeThickness="2" Height="10" X2="{Binding ActualWidth, ElementName=GExportTab, Mode=OneWay}" Y1="9" Stroke="White" Y2="9"/>
            </Grid>
            <Grid x:Name="GImportTab" Grid.Column="1">
                <Label Content="Import Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF909090" FontSize="16"></Label>
            </Grid>
        </Grid>
        
        
        
        
        
        <Grid Grid.Row="2">
            <Grid Margin="300,30,300,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*"></RowDefinition>
                    <RowDefinition Height="0.5*"></RowDefinition>
                    <RowDefinition Height="5*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="Select Settings to Export" FontSize="24" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Content="Choose which settings you want to transfer to your new Windows installation" Foreground="#FFA4A4A4" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"></Label>
                </Grid>
                <Grid Grid.Row="2"></Grid>
                <Grid Grid.Row="3"></Grid>
            </Grid>
        </Grid>
        
        
        
        
    </Grid>
</Window>
